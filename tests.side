{
  "id": "hit-devops-selenium",
  "version": "2.0",
  "name": "Devops personal site",
  "url": "http://localhost:8080/DevOps/index.jsp",
  "tests": [
    {
      "id": "home-flow",
      "name": "Home Flow",
      "commands": [
        { "id":"open",         "command":"open",        "target":"http://localhost:8080/DevOps/index.jsp" },
        { "id":"assertTitle",  "command":"assertTitle", "target":"HIT DevOps App" },

        { "id":"type",         "command":"type",        "target":"id=name",      "value":"Dor Cohen" },
        { "id":"click",        "command":"click",       "target":"id=submitBtn" },

        { "id":"waitResult",   "command":"waitForElementVisible", "target":"css=#result", "value":"5000" },
        { "id":"assertText",   "command":"assertText",  "target":"css=#result", "value":"*Hello*" },

        { "id":"clickDocs",    "command":"click",       "target":"id=docsLink" },
        { "id":"assertUrl",    "command":"assertUrl",   "target":"*docs.jsp" }
      ]
    }
  ],
  "suites": [
    { "id": "default", "name": "Default Suite", "persistSession": false, "tests": ["home-flow"] }
  ]
}
